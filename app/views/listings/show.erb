<h1><%= @listing.title %></h1><br>
<h3>Posted By: <%= link_to @listing.user.name, user_path(@listing.user) %></h3><br>
<p>Description: <%= @listing.description %></p>
<p>Category:<%= @listing.listing_category.name %></p>
<p>Price/Pay Rate: <%= @listing.price %></p><br>

<% @comments.each do |comment| %>
    <p><%= comment.user.name %> has this to say:</p>
    <p><%= comment.content %></p><br>
<% end %>

<% if @listing.user == self %>
<%= link_to "Remove Listing", destroy_listing_path(@listing) %>
<% end %>

<button><%= link_to "Home. Temp button", areas_path(@listing.listing_category.area) %></button>



<h3> Create a new comment? </h3>
<% if flash[:errors] %>
        <% flash[:errors].each do |error|%>
        <p style="color:red" > <%= error %> </p>
<% end %>
<% end %>

<%if logged_in? %>
<% @user = User.find(session[:user_id]) %>
<%= form_for @comment do |f| %>
    <br>
    <%= f.text_area :content %>
    <br>
    <%= f.hidden_field :listing_id, value: @listing.id %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit %>
<% end %>
<% else %>
    <p>Log In to Make a Comment</p>
<% end %>